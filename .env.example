# EchoOS Environment Configuration
# Copy this file to .env and customize as needed

# Application Settings
APP_NAME=EchoOS
APP_VERSION=2.0
DEBUG=False

# Paths
CONFIG_DIR=config
MODELS_DIR=models
LOGS_DIR=logs

# Speech Recognition Settings
VOSK_MODEL_NAME=vosk-model-small-en-us-0.15
SAMPLE_RATE=16000
CHANNELS=1

# Text-to-Speech Settings
TTS_RATE=150
TTS_VOLUME=0.9
TTS_VOICE_INDEX=0

# Authentication Settings
AUTH_SIMILARITY_THRESHOLD=0.75
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=3

# UI Settings
UI_THEME=dark
SHOW_WAVEFORM=true
WINDOW_WIDTH=800
WINDOW_HEIGHT=600

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=echoos.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Performance Settings
MAX_WORKERS=4
CACHE_SIZE=100
AUDIO_BUFFER_SIZE=4096

# Security Settings
ENCRYPTION_KEY_FILE=config/.encryption_key
USERS_DATABASE=config/users.pkl
SESSIONS_DATABASE=config/sessions.pkl

# Feature Flags
ENABLE_ACCESSIBILITY=true
ENABLE_WEB_COMMANDS=true
ENABLE_FILE_OPERATIONS=true
ENABLE_SYSTEM_COMMANDS=true

# Development Settings
DEV_MODE=False
MOCK_AUDIO=False
SKIP_AUTH=False
